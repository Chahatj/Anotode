<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="2dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time:"
            android:id="@+id/tv_time"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url:"
            android:id="@+id/tv_url"
            android:layout_below="@+id/tv_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title:"
                android:id="@+id/tv_title"
                android:layout_below="@+id/tv_url"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlight:"
                android:id="@+id/tv_highlight"
                android:layout_below="@+id/tv_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment:"
                android:id="@+id/tv_comment"
                android:layout_below="@+id/tv_highlight"/>

            <Button
                android:id="@+id/bt_tag"
                style="?android:attr/backgroundTint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textColor="@android:color/black"
                android:layout_below="@+id/tv_comment"
                android:enabled="false"
                android:background="@color/colorPrimary"
                />

            <Button
                android:id="@+id/bt_category"
                style="?android:attr/backgroundTint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"
                android:textColor="@android:color/black"
                android:layout_below="@+id/tv_comment"
                android:layout_toRightOf="@+id/bt_tag"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:background="@color/colorPrimary"
                />



        </RelativeLayout>

        </android.support.v7.widget.CardView>



</RelativeLayout>