<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


         <RelativeLayout
             android:id="@+id/demo1"
             android:layout_width="wrap_content"
             android:layout_gravity="right"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_marginBottom="10dp"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/demotext1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Update"
                 android:background="@drawable/round"
                 android:layout_centerVertical="true"
                 android:padding="12dp"
                 android:layout_marginTop="15dp"
                 android:textColor="@android:color/black"
                 />

             <ImageView
                 android:layout_width="@dimen/filter_image"
                 android:layout_height="@dimen/filter_image"
                 android:gravity="bottom"
                 android:layout_toRightOf="@+id/demotext1"
                 android:layout_marginLeft="20dp"
                 android:src="@drawable/pencil"/>
         </RelativeLayout>


         <RelativeLayout
             android:id="@+id/demo2"
             android:layout_width="wrap_content"
             android:layout_gravity="right"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_marginBottom="10dp"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/demotext2"
                 android:layout_width="70dp"
                 android:layout_height="40dp"
                 android:text="Delete"
                 android:paddingLeft="14dp"
                 android:paddingTop="12dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/round"
                 android:textColor="@android:color/black"/>

             <ImageView
                 android:layout_width="@dimen/filter_image"
                 android:layout_height="@dimen/filter_image"
                 android:gravity="bottom"
                 android:layout_toRightOf="@+id/demotext2"
                 android:layout_marginLeft="20dp"
                 android:src="@drawable/garbage"/>
         </RelativeLayout>

    <RelativeLayout
        android:id="@+id/demo3"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/demotext3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Share"
            android:paddingLeft="14dp"
            android:paddingTop="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="@dimen/filter_image"
            android:layout_height="@dimen/filter_image"
            android:gravity="bottom"
            android:layout_toRightOf="@+id/demotext3"
            android:layout_marginLeft="20dp"
            android:src="@drawable/image"/>
    </RelativeLayout>



         <RelativeLayout
             android:id="@+id/cross"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >

             <ImageView
                 android:layout_width="@dimen/image_filter"
                 android:layout_height="@dimen/image_filter"
                 android:layout_alignParentRight="true"
                 android:gravity="bottom"
                 android:src="@drawable/cancelicon"
                 android:elevation="0dp"
                />
         </RelativeLayout>


     </LinearLayout>
